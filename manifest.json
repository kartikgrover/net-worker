{
  "manifest_version": 3,
  "name": "NetWorker",
  "version": "1.0",
  "description": "Automatically fill personalized notes on LinkedIn when sending connection requests.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
